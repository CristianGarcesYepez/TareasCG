<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        
        <!-- Header mejorado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/header_background"
            android:padding="32dp"
            android:layout_marginBottom="32dp"
            android:elevation="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀 MENÚ PRINCIPAL 🚀"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FULLSTACK DEVELOPER"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.2"/>
        </LinearLayout>

        <!-- Grid de Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1: Curriculum y Contactos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Card 1: Curriculum Vitae -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/curriculumCardView"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/card_curriculum_bg"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_portfolio"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📄 Curriculum"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mi experiencia"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2: Registro de Contactos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/registerCardView"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/card_contacts_bg"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_contacts"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="👥 Contactos"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SQLite Database"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Fila 2: Recetas y Tarea 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Card 3: Recetas de Cocina -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/curriculumCardView3"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/card_meals_bg"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_cuisine"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🍽️ Recetas"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TheMealDB API"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 4: Tarea 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/curriculumCardView4"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:foreground="?android:attr/selectableItemBackground">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/card_task_bg"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_task"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⚙️ Tarea 4"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>
                            
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Próximamente"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Botón de salida mejorado y más prominente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">
            
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  SALIR DE LA APP"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:icon="@drawable/ic_exit"
                app:iconSize="24dp"
                app:backgroundTint="#E74C3C"
                android:textColor="@android:color/white"
                app:iconTint="@android:color/white"
                app:cornerRadius="25dp"
                app:elevation="16dp"
                app:hoveredFocusedTranslationZ="20dp"
                app:pressedTranslationZ="24dp"
                android:contentDescription="Botón para salir de la aplicación"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
